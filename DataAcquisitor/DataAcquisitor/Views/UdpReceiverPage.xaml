<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DataAcquisitor.ViewModels"
             x:Class="DataAcquisitor.Views.UdpReceiverPage">

    <ContentPage.BindingContext>
        <local:UdpReceiverViewModel/>
    </ContentPage.BindingContext>

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label BindingContext="{x:Binding Path=FramesCount}" Text="{Binding FramesCount, StringFormat='Frames Count: {0:F0}'}" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Button Text="Start mesurement" Command="{Binding StartRecieving}"></Button>
        <Button Text="Stop mesurement" Command="{Binding StopRecieving}"></Button>
    </StackLayout>
</ContentPage>